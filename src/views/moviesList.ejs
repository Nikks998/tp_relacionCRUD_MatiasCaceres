<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Películas</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/806fc8dcd9.js" crossorigin="anonymous"></script>
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <h1>LISTADO DE PELÍCULAS</h1>
    <br>
    <div class="d-flex gap-2 align-items-center">
        <a class="btn btn-success fw-semibold" href="/movies/add"><i class="fa-solid fa-plus fa-sm"></i> Agregar
            pelicula</a>
        <a class="btn btn-primary fw-semibold text-center" href="/"><i class="fa-solid fa-house fa-sm"></i> Inicio</a>
        <!-- <form action="/movies/search" method="GET">
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="keyword" placeholder="Buscar pelicula...">
                <button type="submit" class="btn btn-secondary"><i class="fa-solid fa-magnifying-glass"></i></span>
            </div>
        </form> -->
    </div>
    <br>
    <!-- /////////////////////////////////// -->
    <div>
        <table class="table table-hover">

            <thead>
                <tr>
                    <th class="text-uppercase fw-bold" scope="col">#</th>

                    <th class="text-uppercase fw-bold" scope="col">Titulo</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Rating</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Premios</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Genero</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody class="">
                <% movies.forEach(({id, title, rating, awards, genre },index)=> { %>
                    <tr>
                        <th class="" scope="row">
                            <%= index + 1 %>
                        </th>

                        <td class="">
                            <%= title %>
                        </td>

                        <td class="text-center">
                            <%= rating %>
                        </td>

                        <td class="text-center">
                            <%= awards %>
                        </td>

                        <td class="text-center">
                            <%= genre?.name %>
                        </td>

                        <td>
                            <div class="d-flex gap-2 justify-content-center">

                                <a href="/movies/detail/<%= id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="/movies/edit/<%= id %>" class="btn btn-sm btn-outline-success">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- //////////////////////////////////////// -->

                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                                    data-bs-target="#movieModal<%= id %>">
                                    <i class="fas fa-trash"></i>
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="movieModal<%= id %>" tabindex="-1"
                                    aria-labelledby="movieModal<%= id %>Label" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="movieModal<%= id %>Label">Advertencia</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Esta seguro que desea eliminar la pelicula <strong><%= title %></strong> ?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <form action="/movies/delete/<%= id %>?_method=DELETE" method="POST">
                                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>