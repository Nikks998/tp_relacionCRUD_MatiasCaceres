<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Películas</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/806fc8dcd9.js" crossorigin="anonymous"></script>
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <h1>LISTADO DE PELÍCULAS</h1>
    <br>
    <div class="d-flex gap-2">
        <a class="btn btn-success fw-semibold" href="/movies/add">Agregar una Pelicula</a>
        <a class="btn btn-primary fw-semibold" href="/">Inicio</a>
    </div>
    <br>
    <!-- /////////////////////////////////// -->
    <div>
        <table class="table table-hover">

            <thead>
                <tr>
                    <th class="text-uppercase fw-bold" scope="col">#</th>

                    <th class="text-uppercase fw-bold" scope="col">Titulo</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Rating</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Premios</th>

                    <th class="text-uppercase fw-bold text-center" scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody class="">
                <% movies.forEach(({id, title, rating, awards, genre_id },index)=> { %>
                    <tr>
                        <th class="" scope="row">
                            <%= index + 1 %>
                        </th>

                        <td class="">
                            <%= title %>
                        </td>

                        <td class="text-center">
                            <%= rating %>
                        </td>

                        <td class="text-center">
                            <%= awards %>
                        </td>

                        <td>
                            <div class="d-flex gap-2 justify-content-center">

                                <a href="/movies/detail/<%= id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="/movies/edit/<%= id %>" class="btn btn-sm btn-outline-success" >
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a href="#" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>